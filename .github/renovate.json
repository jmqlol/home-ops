{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["deployment\\.ya?ml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchSourceUrls": ["https://github.com/rook/rook"],
      "groupName": "rook-ceph"
    },
    {
      "matchSourceUrls": ["https://github.com/intel/helm-charts"],
      "groupName": "intel"
    },
    {
      "matchSourceUrls": ["https://github.com/kubernetes-sigs/node-feature-discovery"],
      "groupName": "nfd"
    }
  ],
  "customManagers": [
    {
      "description": "Kubernetes version for Sidero Omni cluster resources",
      "customType": "regex",
      "fileMatch": ["^.+\\.ya?ml$"],
      "matchStrings": ["kubernetes:\\s*version:\\s*(?<currentValue>v[\\d.]+)"],
      "depNameTemplate": "kubernetes/kubernetes",
      "datasourceTemplate": "github-releases"
    },
    {
      "description": "Talos version for Sidero Omni cluster resources",
      "customType": "regex",
      "fileMatch": ["^.+\\.ya?ml$"],
      "matchStrings": ["talos:\\s*version:\\s*(?<currentValue>v[\\d.]+)"],
      "depNameTemplate": "siderolabs/talos",
      "datasourceTemplate": "github-releases"
    },
    {
      "description": "Talos version for images generated by the Talos image factory (https://www.talos.dev/v1.6/talos-guides/install/boot-assets)",
      "customType": "regex",
      "fileMatch": ["^.+\\.ya?ml$"],
      "matchStrings": ["factory\\.talos\\.dev\\/installer\\/[a-f0-9]+:(?<currentValue>v[\\d.]+)"],
      "depNameTemplate": "siderolabs/talos",
      "datasourceTemplate": "github-releases"
    }
  ]
}
